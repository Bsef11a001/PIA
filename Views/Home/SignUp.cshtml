@{
    ViewBag.Layout="SignUp";
}

@model TermProject.Models.LoginInfo
<header>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Come To Fly</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav pull-right">
               <li>@Html.ActionLink("Home","Index","Home")</li>
              <li >@Html.ActionLink("SignIn","LogIn","Home")</li>
              <li class="active">@Html.ActionLink("SignUp","#","#")</li>
             <li>@Html.ActionLink("Contact Us","Contact","Home")</li>        
              <li>@Html.ActionLink("Help","Help","Home")</li>              
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
        </header>
        <section >				
            <div id="container_demo" >
                   
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                           
                                @using(Html.BeginForm("LoginInfo","Home",FormMethod.Post))
                                {
                                <h1> Sign up </h1> 
                                <p > 
                                  
                                    @Html.LabelFor(m=>m.UserName);
                                    
                                    @Html.TextBoxFor(m =>m.UserName, new { id="usernamesignup" , name="UserName",type="Text"})
                                    @Html.ValidationMessageFor(model=>model.UserName);
                                    
                                    <input class="btn btn-primary" type="button"  value="Check User Name Availability" onclick="f1()" />
                                </p>
                                <p> 
                                    
                                     @Html.LabelFor(m=>m.Email)
                                     @Html.TextBoxFor(m =>m.Email, new { id="email",type="email"})
                                    @Html.ValidationMessageFor(model => model.Email);
                                </p>
                                <p> 
                                    
                                    @Html.LabelFor(m=>m.Password)
                                     @Html.TextBoxFor(m =>m.Password, new { id="password1",type="password"})
                                    @Html.ValidationMessageFor(model=>model.Password);
                                </p>
                                <p> 
                                    <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">Please confirm your password </label>
                                     @Html.TextBoxFor(m =>m.Password, new { id="password2" ,type="password"})
                                    @Html.ValidationMessageFor(model=>model.Password);
                                </p>
                                 <p > 
                                    
                                     @Html.LabelFor(m=>m.Name)
                                     @Html.TextBoxFor(m =>m.Name, new { id="name" ,type="Text"})
                                    @Html.ValidationMessageFor(model => model.Name);   
                                 </p>
                                    
                                    <p > 
                                   
                                        @Html.LabelFor(m=>m.Address)
                                     @Html.TextBoxFor(m =>m.Address, new { id="address",type="Text"})
                                        @Html.ValidationMessageFor(model=>model.Address);
                                    </p>
                                 <p > 
                                    
                                     @Html.LabelFor(m=>m.PhoneNo)
                                     @Html.TextBoxFor(m =>m.PhoneNo, new { id="ph" ,type="Text"})
                                     @Html.ValidationMessageFor(model=>model.PhoneNo);
                                    </p>
                                <p class="signin button"> 
									<input type="submit" value="Sign up"/> 
								</p>
                                <p class="change_link">  
									Already Have An Account ?
							
                                    @Html.ActionLink("Go to Login","LogIn","Home")
								</p>
                                }
                  </div>
                 </div>
                </div>
            </section>   
@Scripts.Render("~/bundles/jquery")
<script>
    function f1()

    {
        
        $.getJSON('/Home/ChekName?un=' + $('#usernamesignup').val(),
         
            function (x)
            {
                if(x)
                    alert('user name Available');
                else
                    alert('User Name Not Available' );
            }
            );
    }
</script>