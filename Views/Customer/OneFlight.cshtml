@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function () {

        $("#b1").click(function () {

            $('#flight').empty();
            $.getJSON('/Customer/Flight?flight=' + $('#t1').val(),

                function (data) {
                  
                     {
                    
                         $('#flight').append(' <tr> <td>FlightNo </td><td> From </td> <td>To </td> <td>TotalSeats </td> <td>ResrvedSeats</td><td>AvailableSeats</><td>Charges</td><td>Date</td></tr>');
                         $('#flight').append('<tr>')
                        $.each(data, function (i, x) {
                          
                            $('#flight').append(' <td>' + x + '</td>');

                        });
                        $('#flight').append('</tr>')
                    }
                    
                }
                );
            
        });
    });
</script>

